{
	"name": "entrytemplates",
	"version": "1.0.0",
	"private": true,
	"watch": {
		"scripts": {
			"patterns": [
				"src/resources/js"
			],
			"extensions": "js,vue"
		},
		"styles": {
			"patterns": [
				"src/resources/css"
			],
			"extensions": "css"
		}
	},
	"scripts": {
		"scripts": "webpack --config webpack.config.js",
		"styles": "postcss src/resources/css/index.css -o src/resources/css/dist/index.min.css --minify",
		"postcss": "postcss src/resources/css/index.css -o src/resources/css/dist/index.min.css --watch --minify",
		"watch-scripts": "npm-watch scripts",
		"watch-styles": "npm-watch styles",
		"watch": "concurrently \"npm:watch-*\" \"npm:postcss\"",
		"dev": "npm run scripts && npm run styles",
		"build": "npm run scripts && npm run styles"
	},
	"devDependencies": {
		"@babel/core": "^7.24.5",
		"@babel/preset-env": "^7.24.5",
		"autoprefixer": "^10.4.13",
		"babel-loader": "^9.1.3",
		"css-loader": "^7.1.1",
		"cssnano": "^7.0.1",
		"postcss": "^8.4.38",
		"postcss-cli": "^10.0.0",
		"postcss-easy-import": "^4.0.0",
		"postcss-import": "^14.0.2",
		"postcss-nested": "^5.0.6",
		"style-loader": "^4.0.0",
		"vue": "^3.4.27",
		"vue-loader": "^17.4.2",
		"vue-template-compiler": "^2.7.16",
		"webpack": "^5.91.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^5.0.4"
	},
	"dependencies": {
		"choices.js": "^10.2.0"
	}
}
